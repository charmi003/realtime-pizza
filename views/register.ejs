<section id="register" class="pt-16">

    <form action="/auth/register" method="post" class="bg-white w-4/5 lg:w-1/3 mx-auto border border-indigo-600 p-4" id="register-form">

        <div class="mb-4">
            <label for="Name" class="block font-bold text-gray-700 text-sm mb-2">Name</label>
            <input type="text" name="Name" id="Name" class="border rounded focus:outline-none focus:shadow-outline leading-tight w-full text-gray-700 py-2 px-3" placeholder="Your Name" required>
        </div>
    
        <div class="mb-4">
            <label for="Email" class="block font-bold text-gray-700 text-sm mb-2">Email</label>
            <input type="email" name="Email" id="Email" class="border rounded focus:outline-none focus:shadow-outline leading-tight w-full text-gray-700 py-2 px-3" placeholder="Your Email" required>
        </div>
    
        <div class="mb-4">
            <label for="Password" class="block font-bold text-gray-700 text-sm mb-2">Password</label>
            <div class="password-field-container flex justify-between items-center pr-2 border">
                <input type="password" name="Password" id="Password" class="rounded focus:outline-none focus:shadow-outline leading-tight text-gray-700 py-2 px-3 w-full" placeholder="***********" required>
                <i class="fas fa-eye-slash"></i>
                <i class="fas fa-eye"></i>
            </div>
        </div>
    
        <div class="mb-2 flex items-center justify-between">
            <button class="rounded-full border px-4 py-2 text-white font-bold">Register</button>
            <a href="/auth/login-page" class="inline-block font-bold">Already have an account?</a>
        </div>
    
    </form>
    
</section>

