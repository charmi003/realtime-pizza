<section id="login" class="pt-16">

    <form action="/forgotPassword/resetLink/update" method="post" class="bg-white w-full border-2 md:w-1/3 mx-auto border border-indigo-600 p-4" id="login-form">
    
        <input type="hidden" name="accessId" id="accessId" value=<%=accessId %>>
        
        <div class="mb-4">
            <label for="Password" class="block font-bold text-gray-700 text-sm mb-2">New Password</label>
            <div class="password-field-container flex justify-between items-center pr-2 border">
                <input type="password" name="Password" id="Password" class="rounded focus:outline-none focus:shadow-outline leading-tight text-gray-700 py-2 px-3 w-full" placeholder="" required>
                <i class="fas fa-eye-slash"></i>
                <i class="fas fa-eye"></i>
            </div>
        </div>

        <div class="mb-4">
            <label for="ConfirmPassword" class="block font-bold text-gray-700 text-sm mb-2">Confirm Password</label>
            <div class="password-field-container flex justify-between items-center pr-2 border">
                <input type="password" name="ConfirmPassword" id="ConfirmPassword" class="rounded focus:outline-none focus:shadow-outline leading-tight text-gray-700 py-2 px-3 w-full" placeholder="" required>
                <i class="fas fa-eye-slash"></i>
                <i class="fas fa-eye"></i>
            </div>
        </div>
    
        <button class="rounded-full border px-4 py-2 text-white font-bold">Update</button>
    
    </form>
    
</section>



