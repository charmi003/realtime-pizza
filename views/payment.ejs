
<section id="payment" class="pt-12">

    <h1 class="text-xl mx-auto font-bold w-2/3 md:w-1/3 text-center mb-4">Payment Page</h1>

    <div class="flex flex-col w-2/3 md:w-1/3 mx-auto items-center border-2 p-8">

        <h1 class="text-xl font-bold text-center mb-8">Total Amount:- <%= totalAmt%> </h1>
        <button class="rounded-full border px-4 py-2 mb-4" id="rzp-button" data-order-id='<%= orderId %>' >Pay Now</button>
        <div class="flex">
            <div class="font-bold">--------</div>
            <h1 class="mb-4 text-xl">&nbsp; OR &nbsp;</h1>
            <div class="font-bold">--------</div>
        </div>
        <button class="rounded-full border px-4 py-2 mb-2"><a href="/payment/complete/?orderId=<%= orderId %>">Pay On Delivery</a></button>

    </div>

    <input type="hidden" name="payment-total-amt" value="<%= totalAmt%>">

</section>

<script src="js/payment.js"></script>