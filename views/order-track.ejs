<section id="track" class="pt-8">

    <input type="hidden" name="curr-order-status" value="<%= order.Status %>">
    <input type="hidden" name="curr-order-time" value=<%= time %>>

    <div class="w-full md:w-3/5 md:mx-auto px-4">
        <div class="flex justify-between items-center">
            <h1 class="text-xl font-bold">Track Delivery Status</h1>
            <span class="order-id"><%= id %></span>
        </div>
    </div>


    <ul class="w-full md:w-3/5 mx-auto mt-4 p-4">

        <li>
            <div class="flex justify-between">
                <div class="flex items-center w-2/3">
                    <i class="far fa-2x fa-calendar-check w-16"></i>
                    <span class="border rounded-full circle mr-4 bg-black"></span>
                    <p class="text-lg font-bold ">Order Placed</p>
                </div>
                <span class="time"></span>
            </div>
        </li>

        <li class="line ml-16"></li>
        
        <li>
            <div class="flex justify-between">
                <div class="flex items-center w-2/3">
                    <i class="fas fa-2x fa-check-double w-16"></i>
                    <span class="border rounded-full circle mr-4 bg-black"></span>
                    <p class="text-lg font-bold ">Order Confirmed</p>
                </div>
                <span class="time"></span>
            </div>
        </li>

        <li class="line ml-16"></li>

        <li>
            <div class="flex justify-between">
                <div class="flex items-center w-2/3">
                    <i class="fas fa-2x fa-pizza-slice w-16"></i>
                    <span class="border rounded-full circle mr-4 bg-black"></span>
                    <p class="text-lg font-bold ">Order Prepared</p>
                </div>
                <span class="time"></span>
            </div>
        </li>

        <li class="line ml-16"></li>

        <li>
            <div class="flex justify-between">
                <div class="flex items-center w-2/3">
                    <i class="fas fa-2x fa-truck w-16"></i>
                    <span class="border rounded-full circle mr-4 bg-black"></span>
                    <p class="text-lg font-bold">Out for delivery</p>
                </div>
                <span class="time"></span>
            </div>
        </li>

        <li class="line ml-16"></li>

        <li>
            <div class="flex justify-between">
                <div class="flex items-center w-2/3">
                    <i class="far fa-2x fa-smile-beam w-16"></i>
                    <span class="border rounded-full circle mr-4 bg-black"></span>
                    <p class="text-lg font-bold">Delivered</p>
                </div>
                <span class="time"></span>
            </div>
        </li>

    </ul>
    
</section>


<section id="order-summary" class="px-2">

    <div class="flex items-center md:mx-auto px-4 w-full md:w-3/5 mb-2">
        <img src="images/cart-black.png" alt="" class="mr-2">
        <span class="font-bold text-xl">Order Summary</span>
    </div>

    <ul class="w-full md:w-3/5 md:mx-auto px-4 border-t-2 mb-4">
        <% order.Items.forEach(function(item){
            let pizza=item.Pizza; %>

            <li class="border-b-2 p-2" id="<%= pizza._id %>">

                <div class="flex items-center justify-between w-full mb-2">
                    <div class="flex items-center w-3/5">
                        <img src="<%= pizza.Image %>" alt="" height="70px" width="70px" class="mr-2">
                        <span class="text-lg"><%= pizza.Name %></span>
                    </div>
                    <span class="w-2/5 text-right uppercase text-gray-500"><%= pizza.Type %></span>
                </div>


                <div class="flex justify-between mb-2">
                    <span class="text-center font-bold">Quantity:- &nbsp;<%= item.Quantity %></span>
                    <span class="text-xl font-bold text-right w-1/2 item-price">&#x20B9;<%= item.Quantity*pizza.Price %></span>
                </div>
            
            </li>

        <% }) %>
    </ul>

    <div class="md:mx-auto px-4 w-full md:w-3/5 text-right font-bold text-xl mb-4">
        <span>Total Amount:</span> &nbsp;
        <span class="cart-total-amt">&#x20B9;<%= order.TotalPrice %></span>
    </div>

</section>


<script src="js/track.js"></script>