<section id="hero">

    <div class="banner mx-auto flex items-center justify-around px-4">
        <div class="banner-left w-1/2 md:w-1/3">
            <p class="text-lg my-3"><em>Are you hungry?</em></p>
            <h1 class="text-3xl md:text-6xl font-bold">Don't Wait!</h1>
            <button class="rounded-full border px-4 py-2 my-5">Order Now</button>
        </div>
        <div class="banner-right w-1/2 md:w-2/5 py-16">
            <img src="images/hero-pizza.png" alt="">
        </div>
    </div>

</section>



<section id="menu" class="p-4">

    <h1 class="text-2xl font-bold">All Pizzas</h1>

    <div class="container flex flex-wrap justify-around">

        <% for(let pizza of all_pizzas){ %>
            <div class="card m-4" style="width: 18rem;" >

                <div class="card-img-container px-2 py-3">
                    <img src='<%= pizza.Image %>' class="card-img-top inline-block mx-auto">
                </div>
                
        
                <div class="card-body">
                    <h2 class="card-title text-center text-xl"><%= pizza.Name %></h2>
                    <p class="card-text text-center text-xs my-3 p-2 font-bold uppercase rounded w-1/3 mx-auto"><%= pizza.Type %></p>
                    <div class="flex justify-between items-center">
                        <span class="font-bold">&#x20B9;<%= pizza.Price %></span>
                        <a href="/cart/add/<%= pizza._id %>" class="add-item-link inline-block rounded-full font-bold px-4 py-1">+ &nbsp; Add</a>
                    </div>
                </div>
            </div>
        <% } %>

    </div>
    
</section>
