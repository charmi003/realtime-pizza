<section id="header">

    <nav class="w-full flex items-center justify-between py-3 px-4 bg-dark">

        <div clss="nav-left">
            <img src="images/logo.png" alt="" height="100px" width="100px">
        </div>

        <div class="nav-right">
            <ul class="flex items-center">
                <li class="ml-6"><a href="/#menu">Menu</a></li>

                <% if(locals.user) {  

                    if(user.Role=="customer"){ %>

                        <li class="ml-4 md:ml-6"><a href="/orders/customer-all-orders">My Orders</a></li>
                        <li class="ml-4 md:ml-6"><a href="/auth/logout">Logout</a></li>
                        <li class="ml-4 md:ml-6"><a href="/cart" class='cart-link inline-block px-3 md:px-4 py-2 rounded-full'>
                            <% if(user.Cart.TotalQuantity){ %>
                                <span class="rounded-full px-2 py-0 cart-total-qty"><%= user.Cart.TotalQuantity %></span>
                            <% }else{ %>
                                <span class="rounded-full px-2 py-0 cart-total-qty"></span>
                            <% } %>
                            <img src="images/cart.png" alt="" class="inline">
                        </a></li>

                    <% }else if(user.Role=="admin"){ %>

                        <li class="ml-4 md:ml-6"><a href="/admin/all-orders">All Orders</a></li>
                        <li class="ml-4 md:ml-6"><a href="/auth/logout">Logout</a></li>

                <% } %>
                
                    
                <% }else{ %>
                    <li class="ml-4 md:ml-6"><a href="/auth/register-page">Register</a></li>
                    <li class="ml-4 md:ml-6"><a href="/auth/login-page">Login</a></li>
                <% } %>
    
            </ul>
        </div>

    </nav>
    
</section>


